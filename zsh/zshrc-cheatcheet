#------ cheat cheet ------#
cheat-sheet () { zle -M "`cat $HOME/.config/zsh/cheatsheets/cheat-sheet.conf`" }
zle -N cheat-sheet
bindkey "^[^h" cheat-sheet

git-cheat () { zle -M "`cat $HOME/.config/zsh/cheatsheets/git-cheat.conf`" }
zle -N git-cheat
bindkey "^[^g" git-cheat

screen-cheat () { zle -M "`cat $HOME/.config/zsh/cheatsheets/screen-cheat.conf`" }
zle -N screen-cheat
bindkey "^[^s" screen-cheat

tmux-cheat () { zle -M "`cat $HOME/.config/zsh/cheatsheets/tmux-cheat.conf`" }
zle -N tmux-cheat
bindkey "^[^b" tmux-cheat

command-cheat () { zle -M "`cat $HOME/.config/zsh/cheatsheets/command-cheat.conf`" }
zle -N command-cheat
bindkey "^[^j" command-cheat
